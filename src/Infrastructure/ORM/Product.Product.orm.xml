<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Domain\Model\Product\Product" table="product">
        <embedded name="productId" class="App\Domain\Model\Identifier\Identifier"/>
        <embedded name="productName" class="App\Domain\Model\ProductName"/>
        <embedded name="createdDate" class="App\Domain\Model\AppDateTime"/>
        <embedded name="currentStatus" class="App\Domain\Model\Status"/>
        <one-to-many field="events" target-entity="App\Domain\Model\ProductEvent\ProductEvent" mapped-by="product" >
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>
    </entity>

</doctrine-mapping>