<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Domain\Model\ProductEvent\ProductEvent" table="product_event">
        <id name="eventId" type="integer" column="eventId">
            <generator strategy="IDENTITY"/>
        </id>

        <field name="productId" type="string" unique="false" length="100" column="product_id"/>
        <embedded name="productStatus" class="App\Domain\Model\Status"/>
        <embedded name="eventTime" class="App\Domain\Model\AppDateTime"/>

        <many-to-one field="product" target-entity="App\Domain\Model\Product\Product" inversed-by="events">
            <join-column name="productId_uuid" referenced-column-name="productId_uuid" unique="false"/>
        </many-to-one>

    </entity>
</doctrine-mapping>